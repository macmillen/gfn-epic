---
export interface Props {
  src: string;
  class?: string;
  title: string;
  href: string;
}

const { src, class: classes = "", title, href } = Astro.props;
---

<a {href} class="shrink-0">
  <div
    class=`z-1 relative shrink-0 duration-700 group hover:rotate-2 hover:scale-90 ${classes}`
  >
    <div class="relative inline-block lg:block hero-image">
      <img
        {src}
        class="relative group-hover:opacity-90 duration-700 rounded-3xl block h-[140px] w-[140px] lg:h-[400px] lg:w-[400px] transition-all object-cover select-none sm:block animate-blur-in z-10"
        aria-hidden="true"
        draggable="false"
      />
      <p
        class="absolute bottom-3 right-0 text-xl text-right px-3 opacity-0 transition duration-700 bg-black/50 group-hover:opacity-100 w-full z-10 font-bold"
      >
        {title}
      </p>
    </div>
    <img
      class="scale-95 pointer-events-none group-hover:opacity-50 lg:group-hover:opacity-75 transition duration-700 absolute top-8 -z-1 h-[140px] w-[140px] lg:h-[400px] lg:w-[400px] select-none rounded-full opacity-0 blur-2xl filter lg:left-auto left-0 lg:block"
      src="data:image/jpeg;base64,"
      aria-hidden="true"
      draggable="false"
    />
  </div>
</a>
